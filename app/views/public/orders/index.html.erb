<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row justify-content-between align-items-center">
    <h5 class="d-inline-block bg-light col-sm-3 text-center my-4 mx-0 text-nowrap">注文履歴一覧</h5>
  </div>
  <% if @orders.present? %>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr class="text-nowrap">
              <th scope="col-sm-1">注文日</th>
              <th scope="col-sm-4">住所</th>
              <th scope="col-sm-2">注文商品</th>
              <th scope="col-sm-1">支払金額</th>
              <th scope="col-sm-2">ステータス</th>
              <th scope="col-sm-2">注文詳細</th>
            </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr class="table">
              <td class="col-sm-1"><%= image_tag cart_item.item.get_image(50, 50), class: "image" %><%= cart_item.item.name %></td>
              <td class="col-sm-2 text-nowrap"><%= cart_item.with_tax_price.to_s(:delimited) %></td>
              <td class="col-sm-2 flex-row ">
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, class: "form-inline justify-content-between", local: true do |f| %>
                  <%= f.select :amount, *[1..10] ,{ selected: cart_item.amount } %>
                  <%= f.submit "変更" , class: "btn btn-success" %>
                <% end %>
              </td>
              <td class="col-sm-2">
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
              <td class="col-sm d-flex flex-row">
                <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "col-sm btn btn-danger text-nowrap" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <% else %>
    <p class="text-center">注文履歴はありません。</p>
    <div class="text-center">
      <%= link_to "商品を探す", items_path, class: "col-sm-3 btn btn-primary text-nowrap" %>
    </div>
  <% end %>
</div>