<div class="container">
  <div class="row justify-content-between align-items-center">
    <h5 class="d-inline-block bg-light col-sm-2 text-center my-4 mx-0 text-nowrap">注文履歴詳細</h5>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <table class="table table-bordered">
        <p class="font-weight-bold">注文情報</p>
        <tr class="text-nowrap">
          <th class="bg-light">注文日</td>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr class="text-nowrap">
          <th class="bg-light">配送先</td>
          <td><%= @order.address_display %></td>
        </tr>
        <tr class="text-nowrap">
          <th class="bg-light">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr class="text-nowrap">
          <th class="bg-light">ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-sm-3">
      <table class="table table-bordered">
        <p class="font-weight-bold">請求情報</p>
        <tr class="text-nowrap">
          <th class="bg-light">商品合計</td>
          <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr class="text-nowrap">
          <th class="bg-light">配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr class="text-nowrap">
          <th class="bg-light">請求金額</td>
          <td><%= (@order.total_payment).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9">
      <table class="table table-bordered">
        <p class="font-weight-bold">注文内容</p>
        <thead class="thead-light">
          <tr class="text-nowrap">
            <th scope="col-sm-5">商品</th>
            <th scope="col-sm-2">単価(税込)</th>
            <th scope="col-sm-1">個数</th>
            <th scope="col-sm-1">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr class="table">
            <td class="col-sm-5"><%= order_detail.item.name %></td>
            <td class="col-sm-2 text-nowrap"><%= order_detail.price.to_s(:delimited) %></td>
            <td class="col-sm-1"><%= order_detail.amount %></td>
            <td class="col-sm-1"><%= order_detail.price * order_detail.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>