<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row d-flex flex-row">
    <%= render "public/shared/genrebar", genres: @genres %>
    <div class="col-sm-3 col-md-4 img-fluid d-flex justify-content-center my-5 ml-auto" >
      <%= image_tag @item.image, class: "image", style: "width: 200px; height: 150px;"%>
    </div>
    <div class="col-sm-6 col-md-5 mt-5 mx-auto d-flex flex-column">
      <div class="d-flex flex-column mb-2 justify-content-sm-start justify-content-center">
        <h2><%= @item.name %></h2>
        <p class="mb-5", style="font-size: 20px;"><%= @item.introduction %></p>
        <p class="font-weight-bold", style="font-size: 22px;">￥<%= @item.with_tax_price.to_s(:delimited) %><span style="font-size: 10px;">(税込)</span></p>
      </div>
      <div class="d-flex flex-md-row justify-content-sm-start justify-content-center my-3 form-group">
        <%= form_with model: @cart_item, url: cart_items_path(item_id: @item), method: :post, class: "form-inline", local:true do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="col-2 mr-2">
            <%= f.select :amount, *[1..10], placeholder: "個数" %>
          </div>
          <div class="col-3">
            <%= f.submit "カートに入れる" , class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>