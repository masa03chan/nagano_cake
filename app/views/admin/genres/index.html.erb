<div class="container">
  <div class="row">
    <div class="col-12 p-0">
      <h5 class="d-inline-block bg-light col-2 text-center my-5 text-nowrap">ジャンル一覧・追加</h5>
    </div>
  </div>
  <div class="row justify-content-around">
    <div class="col-sm-12 p-0">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group row">
          <div class="col-2 col-form-label">
            <%= f.label :name, class: "font-weight-bold text-nowrap" do %>ジャンル名<% end %>
          </div>
          <div class="col-3 mr-4 col-form-label">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ジャンル名", class: "form-control border border-secondary" %>
          </div>
          <div class="actions col-2 col-form-label">
            <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col", class="text-center">ジャンル</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="col-3"><%= genre.name %></td>
              <td class="col-2"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-block" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>