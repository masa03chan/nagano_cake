<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 p-0">
      <h5 class="d-inline-block bg-light col-2 text-center my-5 text-nowrap">商品編集</h5>
    </div>
  </div>
  <div class="row justify-content-around">
    <% if @customer.errors.any? %>
    <div>
      <h2><%= pluralize(@customer.errors.count, "error") %> 件のエラーがあります。</h2>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="col-sm-10 p-0">
      <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
        <div class="form-group row justify-content-flex-start">
          <div class="col-2 col-form-label">
            <label　for= "id">会員ID</label>
          </div>
          <div class="col-3 flex-row">
            <%= @customer.id %>
          </div>
        </div>
        
        <div class="form-group row justify-content-flex-start">
          <div class="col-2 col-form-label">
            <label for="name">氏名</label>
          </div>
          <div class="col-3 mr-4 form-inline">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control border border-secondary rounded" %>
          </div>
          <div class="col-3 form-inline">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子", class: "form-control border border-secondary rounded" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-flex-start">
          <div class="col-2 col-form-label">
            <label for="name_kana">フリガナ</label>
          </div>
          <div class="col-3 mr-4 form-inline">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control border border-secondary rounded" %>
          </div>
          <div class="col-3 form-inline">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row justify-content-flex-start">
          <div class="col-2 col-form-label">
            <%= f.label :postal_code, class: "text-nowrap" do %>郵便番号<% end %>
          </div>
          <div class="col-3 form-inline">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row justify-content-flex-start">
          <div class="col-sm-2 col-form-label">
            <%= f.label :address, class: "text-nowrap" do %>住所<% end %>
          </div>
          <div class="col-sm-7 form">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row justify-content-flex-start">
          <div class="col-sm-2 col-form-label">
            <%= f.label :telephone_number, class: "text-nowrap" do %>電話番号<% end %>
          </div>
          <div class="col-sm-3 form-inline">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row justify-content-flex-start">
          <div class="col-sm-2 col-form-label">
            <%= f.label :email, class: "text-nowrap" do %>メールアドレス<% end %>
          </div>
          <div class="col-sm-3 form-inline">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row justify-content-flex-start">
          <div class="col-sm-2 col-form-label">
            <%= f.label :is_deleted, class: "font-weight-bold text-nowrap" do %>会員ステータス<% end %>
          </div>
          <div class="col-sm-3 ">
            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value: true, class: "text-nowrap mr-5" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", value: false, class: "text-nowrap" %>
            </div>
          </div>
        </div>
        <div class="form-group row justify-content-flex-start">
          <div class="col-sm-2"></div>
          <div class="actions col-sm-2 col-form-label text-center">
            <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>