<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 p-0">
      <h5 class="d-inline-block bg-light col-2 text-center my-5 text-nowrap">会員一覧</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-10 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr class="text-nowrap">
            <th scope="col-1">会員ID</th>
            <th scope="col-2">氏名</th>
            <th scope="col-2">メールアドレス</th>
            <th scope="col-2">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr class="table">
              <td class="col-1"><%= customer.id %></td>
              <td class="col-2 text-nowrap"><%= link_to customer.full_name, admin_customer_path(customer.id), style: "text-decoration: underline; color: black" %></td>
              <td class="col-2"><%= customer.email %></td>
              <td class="col-2">
                <% if customer.is_deleted? %>
                  <P class="font-weight-bold", style="color-grey">退会</P>
                <% else %>
                  <P class="font-weight-bold", style="color:lightgreen">有効</P>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>