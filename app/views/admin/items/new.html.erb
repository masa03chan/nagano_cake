<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 p-0">
      <h5 class="d-inline-block bg-light col-2 text-center my-5 text-nowrap">商品新規登録</h5>
    </div>
  </div>
  <div class="row justify-content-around">
    <% if @item.errors.any? %>
      <P>空欄では保存できません。</P>
    <% end %>
    <div class="col-sm-12 p-0">
      <%= form_with model: @item do |f| %>
        <div class="form-group row">
          <div class="col-2 col-form-label">
            <%= f.label :image, class: "font-weight-bold text-nowrap" do %>商品画像<% end %>
          </div>
          <div class="col-3 mr-4 col-form-label">
            <%= f.file_field :image, class: "border rounded", accept: "image/*" %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-2 col-form-label">
            <%= f.label :name, class: "font-weight-bold text-nowrap" do %>商品名<% end %>
          </div>
          <div class="col-3 mr-4 col-form-label">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "商品名", class: "form-control border border-secondary" %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="actions col-2 col-form-label text-center">
            <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>